---
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
---

<Layout title="404 — Nicolás Amoroso">
  <div class="max-w-3xl mx-auto px-6 flex-grow">
    <NavBar />
    <main
      id="main"
      class="flex flex-col items-center justify-center py-32 gap-6 text-center"
    >
      <h1 class="text-8xl font-semibold tracking-tight text-zinc-900 dark:text-zinc-100">
        404
      </h1>
      <p class="text-zinc-500 dark:text-zinc-400">Page not found.</p>
      <a
        href="/"
        class="text-sm text-zinc-900 dark:text-zinc-100 hover:text-zinc-500 dark:hover:text-zinc-400 transition-colors underline underline-offset-4"
      >
        ← Back home
      </a>
      <img
        src="/img/this-is-fine-404.gif"
        alt="This is fine meme"
        width="500"
        height="375"
        loading="lazy"
        class="w-full max-w-sm h-auto mt-6 rounded-lg"
      />
    </main>
  </div>
</Layout>
