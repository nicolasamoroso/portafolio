---
import Project from "./Project.astro";

const projects = [
  {
    //Vinos Casa Grande
    src: "/img/vinoscasagrande.png",
    alt: "ecommerce preview",
    title: "Vinos Casa Grande - Store",
    description: "Build and desing a responsive wine store using Next.js & Shopify",
    hrefProject: "https://www.vinoscasagrande.com/",
    hrefGitHub: "",
  },
  {
    //Basement Challenge
    src: "/img/basementchallenge.png",
    alt: "basement preview",
    title: "Basement Challenge",
    description: "Responsive e-commerce from a figma design",
    hrefProject:"https://bsmnt.nicolasamoroso.com/",
    hrefGitHub:"https://github.com/nicolasamoroso/basement-challenge"
  },
  {
    //JAP
    src: "/img/ecommerce.png",
    alt: "ecommerce preview",
    title: "e-commerce",
    description: "'Jovenes a Programar' Program course project'",
    hrefProject:"https://jap.nicolasamoroso.com/",
