---
type StackItem = {
  src: string;
  alt: string;
  title: string;
  description: string;
  hrefProject: string;
  hrefGitHub: string;
};

const { src, alt, title, description, hrefProject, hrefGitHub } = Astro.props as StackItem;
---

<article class="card p-3 md:p-5 rounded-2xl flex flex-col gap-5">
  <a 
    href={hrefProject}
    target="_blank"
    rel="noopener noreferrer"
  >
  <figure class="rounded-[0.5rem] bg-[#ffffffab] dark:bg-[#00000030] p-3">
    <img
      src={src}
      alt={alt}
      width="1080"
      height="542"
      class="select-none"
    />
  </figure>
 </a>
  <div class="flex flex-col justify-between h-full gap-5">
    <div class="flex flex-col gap-2">
      <h2 class="text-lg md:text-xl font-medium">{title}</h2>
      <p class="text-sm md:text-lg text-[#001024c3] dark:text-[#9c9c9c]">
        {description}
      </p>
    </div>
    <p class="flex gap-5 font-medium text-md select-none">
      <a
        href={hrefProject}
        target="_blank"
        class="text-md hover:underline"
        rel="noopener noreferrer"
      >
        View Project
      </a>
      {hrefGitHub !== "" && (
        <a
          href={hrefGitHub}
          target="_blank"
          class="text-md hover:underline"
          rel="noopener noreferrer"
        >
          GitHub
        </a>
        )
      }
    </p>
  </div>
</article>

<style>
  .card {
    background-color: rgba(255, 255, 255, 0.3);
    -webkit-box-shadow: 0 2rem 5rem -1rem rgba(0, 16, 36, 0.108),
      inset 0 1px rgba(255, 255, 255, 0.6);
    box-shadow: 0 2rem 5rem -1rem rgba(0, 16, 36, 0.108),
      inset 0 1px rgba(255, 255, 255, 0.6);
    -webkit-backdrop-filter: blur(4px);
    backdrop-filter: blur(4px);
  }

  @media (prefers-color-scheme: dark) {
    .card {
      background-color: rgba(37, 37, 37, 0.107);
      box-shadow: none;
      border: 1px solid #5c5c5c1a;
    }
  }
</style>
