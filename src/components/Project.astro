---
interface Props {
  src: string;
  alt: string;
  title: string;
  description: string;
  hrefProject: string;
  hrefGitHub: string;
  tags: string[];
  thesis?: boolean;
}

const { src, alt, title, description, hrefProject, hrefGitHub, tags, thesis } = Astro.props;
---

<article class="flex flex-col gap-3">
  <a
    href={hrefProject}
    target="_blank"
    rel="noopener noreferrer"
    class="block group overflow-hidden rounded-lg border border-zinc-200 dark:border-zinc-800 hover:border-zinc-400 dark:hover:border-zinc-600 transition-colors"
    aria-label={`Visit ${title}`}
  >
    <img
      src={src}
      alt={alt}
      width="1080"
      height="542"
      loading="lazy"
      class="w-full h-auto transition-transform duration-300 group-hover:scale-[1.02]"
    />
  </a>

  <div class="flex flex-col gap-2">
    <div class="flex items-start justify-between gap-4">
      <div class="flex items-center gap-2">
        <h3 class="font-medium text-zinc-900 dark:text-zinc-100">{title}</h3>
        {thesis && (
          <span class="text-xs font-medium text-zinc-500 dark:text-zinc-400 border border-zinc-300 dark:border-zinc-700 rounded-md px-2 py-0.5">
            Thesis
          </span>
        )}
      </div>
      <div class="flex gap-3 shrink-0 text-sm">
        <a
          href={hrefProject}
          target="_blank"
          rel="noopener noreferrer"
          class="text-zinc-500 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
        >
          Visit ↗
        </a>
        {
          hrefGitHub && (
            <a
              href={hrefGitHub}
              target="_blank"
              rel="noopener noreferrer"
              class="text-zinc-500 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
            >
              GitHub ↗
            </a>
          )
        }
      </div>
    </div>

    <p class="text-sm text-zinc-600 dark:text-zinc-400 leading-relaxed">{description}</p>

    {
      tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-1">
          {tags.map((tag) => (
            <span class="text-xs text-zinc-500 dark:text-zinc-500 bg-zinc-100 dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-md px-2 py-0.5">
              {tag}
            </span>
          ))}
        </div>
      )
    }
  </div>
</article>
