---
const links = [
  {
    label: "Email",
    value: "contact@nicolasamoroso.com",
    href: "mailto:contact@nicolasamoroso.com",
    external: false,
  },
  {
    label: "LinkedIn",
    value: "nicolas-amoroso ↗",
    href: "https://www.linkedin.com/in/nicolas-amoroso/",
    external: true,
  },
  {
    label: "GitHub",
    value: "nicolasamoroso ↗",
    href: "https://github.com/nicolasamoroso",
    external: true,
  },
];
---

<section id="contact" class="pt-4 pb-16 flex flex-col gap-12">
  <div class="flex flex-col gap-4">
    <h1 class="text-3xl md:text-4xl font-semibold tracking-tight" style="text-wrap: balance">
      Get in touch
    </h1>
    <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-prose">
      Don't hesitate to reach out if you have a question, proposal, or just want
      to chat — I'd love to hear from you.
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
    {
      links.map(({ label, value, href, external }) => (
        <div class="flex flex-col gap-1">
          <p class="text-xs font-medium uppercase tracking-widest text-zinc-400 dark:text-zinc-500">
            {label}
          </p>
          <a
            href={href}
            target={external ? "_blank" : undefined}
            rel={external ? "noopener noreferrer" : undefined}
            class="text-zinc-900 dark:text-zinc-100 hover:text-zinc-500 dark:hover:text-zinc-400 transition-colors text-sm"
          >
            {value}
          </a>
        </div>
      ))
    }

    <div class="flex flex-col gap-1">
      <p class="text-xs font-medium uppercase tracking-widest text-zinc-400 dark:text-zinc-500">
        Resume
      </p>
      <div class="flex gap-4 text-sm">
        <a
          href="/resumes/resume-en.pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="text-zinc-900 dark:text-zinc-100 hover:text-zinc-500 dark:hover:text-zinc-400 transition-colors"
        >
          English ↗
        </a>
        <span class="text-zinc-300 dark:text-zinc-700" aria-hidden="true">·</span>
        <a
          href="/resumes/cv.pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="text-zinc-900 dark:text-zinc-100 hover:text-zinc-500 dark:hover:text-zinc-400 transition-colors"
        >
          Español ↗
        </a>
      </div>
    </div>
  </div>
</section>
